---
import S from "./Link.module.css";
const { href, target = "self", text, modifier } = Astro.props;
let base = import.meta.env.BASE_URL;
if (base.endsWith('/') && base.length > 1) base = base.slice(0, -1);
let finalHref = href;
if (href && href.startsWith('/')) {
  finalHref = `${base}${href}`;
}
---

<a class={`${S.link} ${S[modifier]}`} href={finalHref} target={target} tabindex="0">
  {text ? text : ""}
  <slot />
</a>