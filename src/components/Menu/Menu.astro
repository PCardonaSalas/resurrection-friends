---
import S from "./Menu.module.css";
import { DAYS as days } from "../../const/common/days.js";
const { day } = Astro.props;
const activeClass = `${S["-active"]}`;
---

<ul class={S.menu}>
  {
    days.map(({ id, text }) => (
      <li class={S._item}>
        <a
          class={`${S._link} ${day === id ? activeClass : ""}`}
          href={`${import.meta.env.BASE_URL}/${id}`}
        >
          {text}
        </a>
      </li>
    ))
  }
</ul>
